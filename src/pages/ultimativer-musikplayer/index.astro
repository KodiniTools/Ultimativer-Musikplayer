      function applyLang(lang) {
        var strings = translations[lang] || translations.de;
        var elements = document.querySelectorAll('[data-i18n]');
        for (var i = 0; i < elements.length; i++) {
          var key = elements[i].getAttribute('data-i18n');
          if (strings[key]) {
            elements[i].textContent = strings[key];
          }
        }
        document.documentElement.lang = lang;
      }

      // Apply saved language on load
      var saved = localStorage.getItem('locale') || 'de';
      if (saved !== 'de') {
        applyLang(saved);
      }

      // Sync with SSI navigation language switcher
      window.addEventListener('language-changed', function (e) {
        var lang = e.detail && e.detail.lang;
        if (lang) {
          applyLang(lang);
        }
      });
    })();
  </script>
</body>
</html>
